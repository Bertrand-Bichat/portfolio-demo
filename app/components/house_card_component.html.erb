<div class="col-12 my-1" id=<%= dom_id(@house) %>>
  <%= @house.display_data %>
  <% if Pundit.policy(Current.user, @house).show? %>
    <%= link_to house_path(@house), class: "ml-3 text-decoration-none", title: t('crud.show') do %>
      <i class="fa fa-eye"></i>
    <% end %>
  <% end %>
  <% if Pundit.policy(Current.user, @house).edit? %>
    <%= link_to edit_house_path(@house), remote: true, class: "ml-3 text-decoration-none", title: t('crud.edit'), type: "button", data: { "bs-toggle" => "modal", "bs-target" => "#staticBackdrop" } do %>
      <i class="fa fa-pen"></i>
    <% end %>
  <% end %>
  <% if Pundit.policy(Current.user, @house).destroy? %>
    <%= link_to house_path(@house), method: :delete, remote: true, data: { confirm: t('data.confirm') }, class: "ml-3 text-decoration-none", title: t('crud.delete') do %>
      <i class="fa fa-trash"></i>
    <% end %>
  <% end %>
</div>
