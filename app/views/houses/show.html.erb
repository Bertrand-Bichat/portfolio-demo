<div class="container my-5">
  <p class="pop-title"><%= @house.name %></p>
  <p class="pop-time"><%= t('house.created_at') %> <%= @house.created_at.strftime("%d-%m-%Y") %></p>
  <p class="pop-user"><%= @house.address %></p>
  <p><%= @house.description.blank? ? "<em>#{t('house.no_description')}</em>".html_safe : @house.description %></p>
  <br>
  <% if @house.photos.attached? %>
    <% @house.photos.each do |photo| %>
      <%= link_to rails_blob_path(photo), target: "_blank" do %>
        <%= image_tag photo, height: 50, width: 50, class: "m-1" %>
      <% end %>
    <% end %>
  <% end %>
  <br>
  <div><%= link_to t('back'), :back %></div>
</div>
